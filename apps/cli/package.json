{
  "name": "@podcast-tracker/cli",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "description": "Ink-based terminal UI for Podcast Tracker.",
  "bin": {
    "podcast-tracker": "dist/apps/cli/src/index.js"
  },
  "scripts": {
    "dev": "npm run build && node dist/apps/cli/src/index.js",
    "build": "tsc --project tsconfig.build.json",
    "start": "node dist/apps/cli/src/index.js",
    "test": "vitest run --exclude src/__tests__/*.e2e.test.ts",
    "test:e2e": "vitest run src/__tests__/live.e2e.test.ts --reporter=verbose"
  },
  "dependencies": {
    "ink": "^5.2.1",
    "react": "^18.3.1"
  },
  "devDependencies": {
    "ink-testing-library": "^4.0.0",
    "strip-ansi": "^7.1.2"
  }
}
