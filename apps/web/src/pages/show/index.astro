---
import BaseLayout from "../../layouts/BaseLayout.astro";
import PodcastSearchBarWithProvider from "../../components/search/PodcastSearchBarWithProvider";
import ShowShell from "../../components/app/ShowShell";
---

<BaseLayout
  title="Podcast"
  description="Deep dive into a single podcast with progress, rating, and episode controls."
>
  <div slot="search">
    <div class="mx-auto flex w-full max-w-6xl items-center justify-end gap-3 sm:justify-center">
      <a
        class="flex h-12 w-[50px] flex-shrink-0 items-center justify-center rounded-full border border-white/15 bg-white/80 text-[#12072d] shadow-[0_12px_35px_rgba(17,8,40,0.25)] transition hover:-translate-y-0.5 hover:border-[#bcaeff] hover:bg-white sm:hidden"
        href="/profile"
        aria-label="Back to profile"
      >
        <svg
          aria-hidden
          viewBox="0 0 28 16"
          class="h-3.5 w-6 text-[#5635c7]"
          fill="none"
        >
          <path
            d="M10.5 1.5L3 8l7.5 6.5"
            stroke="currentColor"
            stroke-width="2.2"
            stroke-linecap="round"
            stroke-linejoin="round"
          />
          <path
            d="M26 8H4"
            stroke="currentColor"
            stroke-width="2.2"
            stroke-linecap="round"
          />
        </svg>
      </a>
      <div class="flex-1 sm:flex-none sm:w-full sm:max-w-[420px]">
        <PodcastSearchBarWithProvider
          className="w-full max-w-[420px]"
          client:only="react"
        />
      </div>
    </div>
  </div>
  <ShowShell client:only="react" />
</BaseLayout>
