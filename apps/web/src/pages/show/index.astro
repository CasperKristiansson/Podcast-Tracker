---
import BaseLayout from "../../layouts/BaseLayout.astro";
import PodcastSearchBarWithProvider from "../../components/search/PodcastSearchBarWithProvider";
import ShowShell from "../../components/app/ShowShell";
---

<BaseLayout
  title="Podcast"
  description="Deep dive into a single podcast with progress, rating, and episode controls."
>
  <div slot="search">
    <div class="mx-auto flex w-full max-w-6xl justify-center">
      <PodcastSearchBarWithProvider
        className="w-full max-w-[420px]"
        client:only="react"
      />
    </div>
  </div>
  <ShowShell client:only="react" />
</BaseLayout>
