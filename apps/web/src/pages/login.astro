---
import BaseLayout from '../layouts/BaseLayout.astro';
import LoginPage from '../components/auth/LoginPage';
---

<BaseLayout
  title="Sign in"
  description="Sign in with Google to continue to Podcast Tracker."
  showChrome={false}
>
  <section class="relative flex min-h-screen items-center justify-center overflow-hidden bg-[#0B0A2A] px-6 py-24 text-white">
    <div aria-hidden="true" class="absolute inset-0">
      <svg class="absolute inset-0 h-full w-full" viewBox="0 0 1000 565" preserveAspectRatio="xMidYMid slice" role="img">
        <defs>
          <linearGradient id="loginSky" x1="0" y1="0" x2="0" y2="1">
            <stop offset="0%" stop-color="#15124a" />
            <stop offset="55%" stop-color="#281d6c" />
            <stop offset="100%" stop-color="#0b092d" />
          </linearGradient>
        </defs>
        <rect width="1000" height="565" fill="url(#loginSky)" />
        <g class="login-starfield">
          <circle cx="72" cy="64" r="1.2" />
          <circle cx="188" cy="112" r="0.9" />
          <circle cx="334" cy="58" r="1.1" />
          <circle cx="512" cy="46" r="1.4" />
          <circle cx="678" cy="72" r="1.1" />
          <circle cx="842" cy="96" r="0.9" />
          <circle cx="942" cy="38" r="1.0" />
          <circle cx="108" cy="184" r="0.8" />
          <circle cx="264" cy="172" r="1.2" />
          <circle cx="432" cy="120" r="1.0" />
          <circle cx="592" cy="164" r="0.9" />
          <circle cx="736" cy="138" r="1.1" />
          <circle cx="896" cy="192" r="1.0" />
          <circle cx="64" cy="238" r="1.0" />
          <circle cx="204" cy="260" r="1.2" />
          <circle cx="368" cy="226" r="1.0" />
          <circle cx="520" cy="208" r="1.1" />
          <circle cx="680" cy="244" r="0.9" />
          <circle cx="848" cy="228" r="1.2" />
          <circle cx="940" cy="276" r="1.0" />
        </g>
      </svg>
      <div class="absolute inset-0 bg-[radial-gradient(circle_at_top,_rgba(150,119,255,0.28),_transparent_60%)]" />
      <div class="absolute inset-x-0 bottom-0 h-1/3 bg-gradient-to-t from-[#07071f] via-[#0b092d]/40 to-transparent" />
    </div>

    <div class="relative z-10 mx-auto flex w-full max-w-5xl flex-col items-center gap-12 text-center">
      <div class="space-y-4">
        <p class="text-xs uppercase tracking-[0.4em] text-white/55">Let&apos;s get you back in</p>
        <h1 class="text-5xl font-semibold tracking-tight text-white sm:text-6xl">
          Ready when you are.
        </h1>
        <p class="mx-auto max-w-xl text-base text-white/65 sm:text-lg">
          Sign in with Google to pick up where you left offâ€”episodes, progress, and everything else.
        </p>
      </div>

      <LoginPage client:only="react" />
    </div>
  </section>
</BaseLayout>

<style>
  :global(.login-starfield circle) {
    fill: #d7d4ff;
    opacity: 0.85;
    animation: login-star-twinkle 4.8s ease-in-out infinite;
  }

  :global(.login-starfield circle:nth-child(2n)) {
    animation-delay: 0.35s;
    animation-duration: 5.6s;
  }

  :global(.login-starfield circle:nth-child(3n)) {
    animation-delay: 0.6s;
    animation-duration: 6.4s;
  }

  @keyframes login-star-twinkle {
    0%,
    100% {
      opacity: 0.85;
    }
    50% {
      opacity: 0.35;
    }
  }
</style>
