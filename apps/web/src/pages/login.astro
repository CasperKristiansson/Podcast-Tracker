---
import BaseLayout from '../layouts/BaseLayout.astro';
import LoginPage from '../components/auth/LoginPage';
---

<BaseLayout
  title="Sign in"
  description="Sign in with Google to continue to Podcast Tracker."
  showChrome={false}
>
  <section class="relative isolate flex min-h-screen flex-col items-center justify-center overflow-hidden px-6 py-24">
    <div class="absolute inset-0 bg-[radial-gradient(circle_at_top,_rgba(111,90,198,0.22),_transparent_55%)]" aria-hidden="true" />
    <div class="absolute inset-0 opacity-60">
      <div class="hero-decor">
        <span class="hero-blob hero-blob--one"></span>
        <span class="hero-blob hero-blob--two"></span>
        <span class="hero-blob hero-blob--three"></span>
      </div>
    </div>

    <div class="relative z-10 mx-auto flex w-full max-w-5xl flex-col items-center gap-12 text-center">
      <div class="space-y-4">
        <p class="text-xs uppercase tracking-[0.35em] text-brand-muted">Let&apos;s get you back in</p>
        <h1 class="text-5xl font-semibold tracking-tight text-brand-text sm:text-6xl">
          Ready when you are.
        </h1>
        <p class="max-w-xl text-base text-brand-muted sm:text-lg">
          Sign in with Google to pick up where you left offâ€”episodes, progress, and everything else.
        </p>
      </div>

      <LoginPage client:only="react" />
    </div>
  </section>
</BaseLayout>
