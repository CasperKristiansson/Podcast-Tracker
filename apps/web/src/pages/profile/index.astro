---
import BaseLayout from "../../layouts/BaseLayout.astro";
import ProfileApp from "../../components/profile/ProfileApp";
import PodcastSearchBarWithProvider from "../../components/search/PodcastSearchBarWithProvider";
---

<BaseLayout
  title="Profile"
  description="Track your podcasts, celebrate progress, and see what's waiting next."
>
  <div slot="search">
    <div class="mx-auto flex w-full max-w-6xl justify-center">
      <PodcastSearchBarWithProvider
        className="w-full max-w-[420px]"
        client:only="react"
      />
    </div>
  </div>
  <section class="relative flex min-h-screen w-full flex-col">
    <ProfileApp client:only="react" />
  </section>
</BaseLayout>
