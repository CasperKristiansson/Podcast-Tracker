---
import '../styles/global.css';

type Props = {
  title?: string;
  description?: string;
};

const {
  title = 'Podcast Tracker',
  description = 'Track the shows you love with real-time episode updates.',
} = Astro.props as Props;
const hasSearch = Astro.slots.has('search');
---

<!DOCTYPE html>
<html lang="en" class:list={{ dark: true }}>
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>{title}</title>
    <meta name="description" content={description} />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      rel="stylesheet"
      href="https://fonts.googleapis.com/css2?family=Nunito+Sans:ital,opsz,wght@0,6..12,200..1000;1,6..12,200..1000&display=swap"
    />
  </head>
  <body class="min-h-screen bg-brand-black text-brand-text selection:bg-brand-primary/40">
    <script is:inline>
      document.documentElement.classList.add('dark');
    </script>
    <div class="flex min-h-screen flex-col">
      <main class="flex-1">
        {hasSearch && (
          <div class="border-b border-white/5 bg-brand-surface/50 px-6 py-6">
            <div class="mx-auto max-w-5xl">
              <slot name="search" />
            </div>
          </div>
        )}
        <slot />
      </main>
    </div>
  </body>
</html>
