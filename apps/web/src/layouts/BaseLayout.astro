---
import '../styles/global.css';

type Props = {
  title?: string;
  description?: string;
  showChrome?: boolean;
};

const {
  title = 'Podcast Tracker',
  description = 'Track the shows you love with real-time episode updates.',
  showChrome = true
} = Astro.props as Props;
---

<!DOCTYPE html>
<html lang="en" class:list={{ dark: true }}>
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>{title}</title>
    <meta name="description" content={description} />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      rel="stylesheet"
      href="https://fonts.googleapis.com/css2?family=Nunito+Sans:ital,opsz,wght@0,6..12,200..1000;1,6..12,200..1000&display=swap"
    />
  </head>
  <body class="min-h-screen bg-brand-black text-brand-text selection:bg-brand-primary/40">
    <script is:inline>
      document.documentElement.classList.add('dark');
    </script>
    <div class="flex min-h-screen flex-col">
      {showChrome && (
        <header class="border-b border-white/5 bg-brand-surface/80 px-6 py-4 backdrop-blur">
          <div class="mx-auto flex max-w-5xl items-center justify-between text-brand-text">
            <a class="text-lg font-semibold" href="/">Podcast Tracker</a>
            <span class="text-sm text-brand-muted">Serverless MVP</span>
          </div>
        </header>
      )}
      <main class="flex-1">
        <slot />
      </main>
      {showChrome && (
        <footer class="border-t border-white/5 bg-brand-surface/60 px-6 py-4">
          <div class="mx-auto max-w-5xl text-sm text-brand-muted">
            &copy; {new Date().getFullYear()} Podcast Tracker. All rights reserved.
          </div>
        </footer>
      )}
    </div>
  </body>
</html>
