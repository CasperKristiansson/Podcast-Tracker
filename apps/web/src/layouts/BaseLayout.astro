---
import '../styles/global.css';

type Props = {
  title?: string;
  description?: string;
};

const {
  title = 'Podcast Tracker',
  description = 'Track the shows you love with real-time episode updates.',
} = Astro.props as Props;
const hasSearch = Astro.slots.has('search');
---

<!DOCTYPE html>
<html lang="en" class:list={{ dark: true }}>
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>{title}</title>
    <meta name="description" content={description} />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      rel="stylesheet"
      href="https://fonts.googleapis.com/css2?family=Nunito+Sans:ital,opsz,wght@0,6..12,200..1000;1,6..12,200..1000&display=swap"
    />
  </head>
  <body class="relative min-h-screen bg-[radial-gradient(circle_at_top,_rgba(132,88,255,0.2),_rgba(11,7,46,0.92)_55%,_rgba(3,1,16,1))] text-brand-text selection:bg-brand-primary/40">
    <script is:inline>
      document.documentElement.classList.add('dark');
    </script>
    <div aria-hidden="true" class="pointer-events-none absolute inset-0 overflow-hidden">
      <div class="absolute -top-48 left-1/2 h-[36rem] w-[36rem] -translate-x-1/2 rounded-full bg-[#c8adff]/22 blur-[160px]" />
      <div class="absolute -bottom-40 left-[-12%] h-[28rem] w-[28rem] rounded-full bg-[#6e49ff]/16 blur-[150px]" />
      <div class="absolute -right-36 top-14 h-[30rem] w-[30rem] rounded-full bg-[#58dcff]/12 blur-[150px]" />
    </div>
    <div class="flex min-h-screen flex-col">
      <main class="flex-1">
        {hasSearch && (
          <div class="border-b border-white/5 bg-brand-surface/50 px-6 py-6">
            <div class="mx-auto max-w-5xl">
              <slot name="search" />
            </div>
          </div>
        )}
        <slot />
      </main>
    </div>
  </body>
</html>
