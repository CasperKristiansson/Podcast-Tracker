{
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    "noEmit": true,
    "types": ["node"],
    "jsx": "react-jsx",
    "jsxImportSource": "react",
    "baseUrl": "./",
    "paths": {
      "@shared": ["packages/shared/src/index.ts"],
      "@shared/*": ["packages/shared/src/*"],
      "@ui": ["packages/ui/src/index.ts"],
      "@ui/*": ["packages/ui/src/*"]
    }
  },
  "include": [
    "apps/**/*.ts",
    "apps/**/*.tsx",
    "packages/**/*.ts",
    "packages/**/*.tsx",
    "infra/**/*.ts",
    "vitest.setup.ts"
  ],
  "exclude": ["node_modules", "dist", "build", "coverage", "cdk.out"]
}
