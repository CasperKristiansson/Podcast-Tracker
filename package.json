{
  "name": "podcast-tracker",
  "version": "0.1.0",
  "private": true,
  "description": "Serverless podcast tracker monorepo (Astro frontend, AWS CDK infra, Lambdas).",
  "license": "UNLICENSED",
  "engines": {
    "node": ">=24.10.0",
    "npm": ">=11.6.0"
  },
  "scripts": {
    "postinstall": "echo 'Workspaces initialized. Add project-specific install steps as tasks progress.'",
    "clean": "rm -rf node_modules **/node_modules",
    "typecheck": "tsc --project tsconfig.json --noEmit",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "codegen": "graphql-codegen --config codegen.ts",
    "codegen:watch": "graphql-codegen --config codegen.ts --watch"
  },
  "workspaces": [
    "apps/*",
    "packages/*",
    "infra"
  ],
  "dependencies": {
    "@apollo/client": "^3.14.0",
    "@aws-sdk/client-dynamodb": "^3.705.0",
    "@aws-sdk/client-ssm": "^3.705.0",
    "@aws-sdk/lib-dynamodb": "^3.705.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.37.0",
    "@graphql-codegen/cli": "^6.0.0",
    "@graphql-codegen/typescript": "^5.0.2",
    "@graphql-codegen/typescript-operations": "^5.0.2",
    "@graphql-codegen/typescript-react-apollo": "^4.3.3",
    "@types/node": "^24.7.2",
    "eslint": "^9.37.0",
    "graphql": "^16.11.0",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.46.1"
  }
}
